    "eslint-plugin-vue": "^10.2.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.91.0",
    "storybook": "^9.1.3",
    "stylelint": "15.10.3",
    "stylelint-config-recommended-vue": "1",
    "stylelint-config-standard": "34",
    "stylelint-config-standard-scss": "15",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0"
