{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["react", "node"],
    "typeRoots": ["../node_modules/@types", "./src/types"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@/*": ["*"]
    },
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "dist"]
}