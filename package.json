{
  "name": "multi-tenant-cms",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "backend:dev": "yarn workspace backend-express dev",
    "backend:build": "yarn workspace backend-express tsc -p backend-express/tsconfig.json",
    "backend:lint": "yarn workspace backend-express lint",
    "backend:test": "yarn workspace backend-express test",
    "frontend:dev": "yarn workspace frontend dev",
    "frontend:build": "yarn workspace frontend build",
    "frontend:lint": "yarn workspace frontend lint",
    "frontend:test": "yarn workspace frontend test",
    "dev": "concurrently \"yarn backend:dev\" \"yarn frontend:dev\"",
    "build": "yarn backend:build && yarn frontend:build",
    "test": "yarn backend:test && yarn frontend:test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.7"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && yarn lint:fix",
      "yarn prettier --write"
    ],
    "backend/**/*.{js,ts}": [
      "cd backend && yarn lint:fix",
      "yarn prettier --write"
    ]
  },
  "resolutions": {
    "dompurify": "3.2.7"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
