{
  "name": "multi-tenant-cms",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "infrastructure"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": ["cd frontend && yarn lint", "yarn prettier --write"],
    "backend/**/*.{js,ts}": ["cd backend && yarn lint", "yarn prettier --write"]
  }
}
