{
  "info": {
    "name": "Multi-tenant CMS",
    "description": "Collection for testing the multi-tenant CMS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Tenant",
      "item": [
        {
          "name": "Get Current Tenant",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Host",
                "value": "{{host}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/tenant/current",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["tenant", "current"]
            },
            "description": "Get information about the current tenant based on the Host header"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Host",
                "value": "{{host}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "login"]
            },
            "description": "Login with tenant context"
          }
        }
      ]
    }
  ]
} 