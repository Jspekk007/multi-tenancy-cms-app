{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "es2022",
    "sourceMap": false,
    "declarationMap": false,
    "paths": {
      "@backend/utils/*": ["../utils/*"],
      "@backend/modules/*": ["./modules/*"],
      "@backend/services/*": ["./services/*"],
      "@backend/types/*": ["./types/*"],
      "@backend/middlewares/*": ["./middlewares/*"],
      "@backend/db/*": ["./db/*"],
      "@backend/lib/*": ["./lib/*"],
      "@backend/queues/*": ["./queues/*"],
      "@backend/trpc": ["./trpc.ts"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}