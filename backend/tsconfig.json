{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "express"],
    "paths": {
      "@/core/*": ["../../packages/core/*"]
    }
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
